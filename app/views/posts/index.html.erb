<div class="page-header">
  <h1>My Games</h1>
</div>

<% if current_user %>
  <%= link_to 'New post', new_post_path %>
<% end %>
<div class="container">
  <% @posts.reverse_each do |post| %>
    <div class="col-sm-12">
      <div class="well clearfix">
        <div class="col-sm-4">
          <div class="thumbnail">
            <%= link_to image_tag(post.avatar_name), post_path(post) %>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="caption">
            <h3 style="display:inline"><%= link_to post.title, post_path(post) %> <i><%= post.role %></i></h3>
          </div>
          <div class="text">
            <p><%= post.text.html_safe %></p>
          </div>
        </div>
        <% if current_user %>
          <td><%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
